- content_for (:title) do
  = h "Editing <%= singular_name.titleize %>"

= error_messages_for :<%= singular_name %>

- form_for @<%= singular_name %> do |f|
  %dl
    = render :partial => "form", :locals => { :f => f }
  %p= submit_tag "Update"

%p
  = link_to 'Show', object_path
  |
  = link_to 'Back', collection_path
